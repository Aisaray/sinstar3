<SOUI 
  name="wnd_tip" 
  width="-1" 
  height="-1"   
  resizable="0" 
  wndType="normal"
  translucent="1"
  toolwindow="1"
>
  <skin>
  </skin>

  <root layout="vbox" colorBkgnd="#cccccc" padding="5,5,5,5">
    <caption2 size="-2,30dp" layout="hbox" gravity="center">
      <window size="0,0" weight="1" visible="0"/>
      <text size="-1,-2" name="txt_tip_title" text="tip" font="bold:1"/>
      <window size="0,-2" weight="1" layout="hbox" gravity="center">
        <window size="0,0" weight="1" visible="0"/>
        <imgbtn size="-1,-1" name="btn_close" skin="_skin.sys.btn.close" tip="close"/>
      </window>
    </caption2>
    <text size="-1,-1" maxWidth="300dp" multiLines="1" name="txt_tip_content"/>
  </root>
</SOUI>
