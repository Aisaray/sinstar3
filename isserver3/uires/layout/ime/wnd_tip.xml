<SOUI 
  name="wnd_tip" 
  width="-1" 
  height="-1"   
  resizable="0" 
  wndType="normal"
  translucent="1"
  toolwindow="1"
>
  <skin>
  </skin>

  <root layout="vbox">
    <caption2 size="-1,-1" layout="vbox" skin="skin_tip_bg" padding="160,70,90,20" font="size:16">
	    <caption2 size="-2,30dp" layout="hbox" gravity="center">
	      <window size="0,0" weight="1" visible="0"/>
	      <text size="-1,-2" name="txt_tip_title" text="tip" font="bold:1"/>
	      <window size="0,-2" weight="1" layout="hbox" gravity="center">
	        <window size="0,0" weight="1" visible="0"/>
	        <imgbtn size="-1,-1" name="btn_close" skin="_skin.sys.btn.close" tip="close"/>
	      </window>
	    </caption2>
	    <caption2 size="-1,-1" padding="0,10,0,0">
	    	<window pos="0,0,100,120" visible="0"/> 
	    	<text pos="0,0" size="-1,-1" maxWidth="350dp" multiLines="1" name="txt_tip_content"/>
	    </caption2>
    </caption2>
  </root>
</SOUI>
