<?xml version="1.0" encoding="utf-8"?>
<SOUI name="TextEditor" title="@string/text_editor" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:16"  margin="5,5,5,5"  resizable="1" wndType="normal"
appWnd="1"
translucent="0"
>
  <style>
    <text.tip size="-2,-1" multiLines="1" colorText="@color/red"/>
  </style>
  <root  width="600" height="400" skin="_skin.sys.wnd.bkgnd" cache="1" layout="vbox" padding="5,5,5,5" interval="10">
    <caption size="-2,30" layout="hbox" gravity="center">
      <window size="-1,-2" layout="vbox">
        <text name="txt_edit_userdef" text="@string/txt_edit_userdef" visible="0" display="0"/>
        <text name="txt_edit_symbol" text="@string/txt_edit_symbol" visible="0" display="0"/>
        <text name="txt_edit_usercmd" text="@string/txt_edit_usercmd" visible="0" display="0"/>
        <text name="txt_edit_userjm" text="@string/txt_edit_userjm" visible="0" display="0"/>
        <text name="txt_edit_userdict" text="@string/txt_edit_userdict" visible="0" display="0"/>
      </window>
      <window size="0,0" weight="1" visible="0"/>
      <imgbtn size="-1,-1" name="btn_close" skin="_skin.sys.btn.close"  id="IDCANCEL" tip="close" animate="1"/>
    </caption>
    <realwnd size="-2,0" weight="1" name="real_scilexer" wndclass="Scintilla"/>
    <window size="-2,-1" layout="hbox">
      <window size="0,0" weight="2" visible="0"/>
      <button size="100,30" name="btn_save" text="@string/save"/>
      <window size="0,0" weight="1" visible="0"/>
      <button size="100,30" name="btn_close" text="@string/cancel"/>
      <window size="0,0" weight="2" visible="0"/>
    </window>
    <window size="-2,-1" layout="vbox">
      <text.tip name="tip_edit_userdef" text="@string/tip_edit_userdef" visible="0" display="0"/>
      <text.tip name="tip_edit_symbol" text="@string/tip_edit_symbol" visible="0" display="0"/>
      <text.tip name="tip_edit_usercmd" text="@string/tip_edit_usercmd" visible="0" display="0"/>
      <text.tip name="tip_edit_userjm" text="@string/tip_edit_userjm" visible="0" display="0"/>
      <text.tip name="tip_edit_userdict" text="@string/tip_edit_userdict" visible="0" display="0"/>
    </window>
  </root>
</SOUI>
