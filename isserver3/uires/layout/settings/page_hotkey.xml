<?xml version="1.0" encoding="utf-8"?>
<window size="-2,-1" layout="vbox" interval="10" padding="0,0,0,20">
  <window size="-2,-1" layout="hbox" gravity="center">
    <text inset="10,5,5,5">@string/cfg_hotkey</text>
    <hr width="-2" height="1"/>
  </window>
  <window size="-2,-1" padding_left="50" layout="gridLayout" xGravity="right" columnCount="2" xInterval="5dp" yInterval="10dp">
    <text text="音形码切换"/>
    <hotkey name="hk_switch_py" weight="1" width="120dp" height="30dp"/>
    <text text="临时拼音"/>
    <hotkey name="hk_switch_tempspell" weight="1" width="120dp" height="30dp"/>
    <text text="自定义模式"/>
    <hotkey name="hk_to_umode" width="120dp" height="30dp"/>
    <text text="重复上次输入\n&&编码上屏" multiLines="1"/>
    <hotkey name="hk_repeat" width="120dp" height="30dp"/>
    <text text="造词"/>
    <hotkey name="hk_make_phrase" width="120dp" height="30dp"/>
    <text text="字根表显示"/>
    <hotkey name="hk_show_table" width="120dp" height="30dp"/>
    <text text="编码查询"/>
    <hotkey name="hk_show_comp" width="120dp" height="30dp"/>
    <text text="隐藏状态栏"/>
    <hotkey name="hk_show_statusbar" width="120dp" height="30dp"/>
    <text text="单词补全"/>
    <hotkey name="hk_input_en" width="120dp" height="30dp"/>
    <text text="过滤GBK"/>
    <hotkey name="hk_filter_gbk" width="120dp" height="30dp"/>
    <text text="语音较对(TTS)"/>
    <hotkey name="hk_tts" width="120dp" height="30dp"/>
    <text text="输入记忆"/>
    <hotkey name="hk_record" width="120dp" height="30dp"/>
  </window>
</window>