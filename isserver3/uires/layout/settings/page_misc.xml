<?xml version="1.0" encoding="utf-8"?>
<window size="-2,-1" layout="vbox" interval="10" padding="0,0,0,20">
  <window size="-2,-1" layout="hbox" gravity="center">
    <text inset="10,5,5,5">@string/cfg_misc</text>
    <hr width="-2" height="1"></hr>
  </window>
  <window layout="vbox" interval="10" padding="50,0,0,0">
    <text text="数据备份:"/>
    <window size="-1,-1" layout="hbox" gravity="center">
      <edit size="320,30"  name="edit_backup" readonly="1" cueText="每小时自动备份用户数据"/>
      <button size="80,30" name="btn_pick_backup_dir" text="..."/>
    </window>
    <window size="-2,-1" layout="hbox" gravity="center" padding="50,0,50,0">
      <button size="80,30" name="btn_backup" text="立即备份"/>
      <button size="100,30" extend_left="50" name="btn_restore" text="从备份恢复"/>
    </window>
    <text text="搜索引擎:"/>
    <combobox size="300,30" name="cbx_search_engine" dropdown="1">
      <liststyle colorBkgnd="#ffffff" margin="1,1,1,1" colorBorder="@color/black" font="size:16"/>
    </combobox>
    <text text="提示音:" />
    <window size="-1,-1" layout="hbox">
      <radio name="sound_disable" text="禁用" id="800"/>
      <radio name="sound_wave" text="WAV提示" id="801"/>
      <radio name="sound_beep" text="蜂鸣器" id="802"/>
    </window>
    <text text="笔画输入键:"/>
    <window size="-1,-1" layout="gridlayout" columnCount="4" xInterval="5" yInterval="5" xGravity="right">
      <text text="横(小键盘1):"/>
      <hotkey name="hk_bihua_heng" id="900" width="80dp" invalidComb="alt+ctrl+shift"/>
      <text text="竖(小键盘2):"/>
      <hotkey name="hk_bihua_shu" id="901" width="80dp" invalidComb="alt+ctrl+shift"/>
      <text text="撇(小键盘3):"/>
      <hotkey name="hk_bihua_pie" id="902" width="80dp" invalidComb="alt+ctrl+shift"/>
      <text text="捺(小键盘4):"/>
      <hotkey name="hk_bihua_na" id="903" width="80dp" invalidComb="alt+ctrl+shift"/>
      <text text="折(小键盘5):"/>
      <hotkey name="hk_bihua_zhe" id="904" width="80dp" invalidComb="alt+ctrl+shift"/>
      <text text="万能键(小键盘6):"/>
      <hotkey name="hk_bihua_wild" id="905" width="80dp" invalidComb="alt+ctrl+shift"/>
    </window>
  </window>
  </window>
