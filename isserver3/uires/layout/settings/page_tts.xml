<?xml version="1.0" encoding="utf-8"?>
<window size="-2,-1" layout="vbox" interval="10" padding="0,0,0,20">
  <window size="-2,-1" layout="hbox" gravity="center">
    <text inset="10,5,5,5">@string/cfg_tts</text>
    <hr width="-2" height="1"></hr>
  </window>
  <window size="-2,-1" layout="vbox" interval="10" padding_left="50">
    <text text="中文语音" />
    <window size="-1,-1" layout="hbox" gravity="center">
      <combobox size="250dp,-1" name="cbx_tts_ch_token" dropdown="1">
        <liststyle colorBkgnd="#ffffff"/>
      </combobox>
      <button size="70dp,30dp" name="btn_tts_ch_preview" text="试听" extend_left="10"/>
    </window>
    <text text="英文语音" />
    <window size="-1,-1" layout="hbox" gravity="center">
      <combobox size="250dp,-1" name="cbx_tts_en_token" dropdown="1">
        <liststyle colorBkgnd="#ffffff"/>
      </combobox>
      <button size="70dp,30dp" name="btn_tts_en_preview" text="试听" extend_left="10"/>
    </window>
    <window size="-1,-1" layout="hbox" gravity="center">
      <text text="语速:[0,10]"/>
      <sliderbar size="200dp,-1" name="slider_tts_speed" min="0" max="10" value="0" />
      <text size="30dp,-1" name="txt_tts_speed"/>
    </window>
  </window>
</window>