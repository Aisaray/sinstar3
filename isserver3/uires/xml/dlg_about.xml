<SOUI name="about" title="@string/about" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:16" width="600" height="300"  margin="5,5,5,5"  resizable="0" wndType="normal"
appWnd="1"
translucent="1" 
>
  <root skin="_skin.sys.wnd.bkgnd" cache="1" layout="vbox" padding="5,5,5,5">
    <caption size="-2,30" layout="hbox" gravity="center">
      <icon src="ICON_LOGO:16"/>
      <text text="@string/about"/>
      <window size="0,0" weight="1" visible="0"/>
      <imgbtn name="btn_close" skin="_skin.sys.btn.close"  id="IDCANCEL"  pos="-45,0" tip="close" animate="1"/>
    </caption>
    <window size="-2,0" weight="1" layout="vbox" gravity="center">
      <text name="txt_name"/>
      <window size="-1,-1" layout="hbox" extend_top="10">
        <text text="版本："/>
        <text name="txt_ver"/>
      </window>
      <text text="版权所有(C)：启程软件 2002-2018" extend_top="10"/>
      <window size="-1,-1" layout="hbox" extend_top="10">
        <text text="官网:"/>
        <link href="http://soime.cn" text="http://soime.cn"/>
      </window>
      <check name="chk_auto_update" text="启用自动更新" extend_top="10"/>
      <window size="-1,-1" layout="hbox" extend_top="10" gravity="center">
        <text text="检查更新周期:"/>
        <combobox name="cbx_update_interval" size="60,25">
          <liststyle colorBkgnd="#ffffff"/>
          <items>
            <item text="周"/>
            <item text="月"/>
            <item text="季"/>
          </items>
        </combobox>
        <button name="btn_update_now" text="立即检查" padding="10,5,10,5" extend_left="5"/>
      </window>
    </window>
  </root>
</SOUI>
