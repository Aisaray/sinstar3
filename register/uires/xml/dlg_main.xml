<SOUI name="mainWindow" title="@string/title" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:16" width="600" height="400"  margin="20,5,5,5"  resizable="1" wndType="appMain"
appWnd="1"
translucent="1" 
>
  <root skin="_skin.sys.wnd.bkgnd" cache="1">
    <caption pos="0,0,-0,30" show="1" font="adding:0">
      <icon pos="10,8" src="ICON_LOGO:16"/>
      <text pos="29,9">@string/title</text>
      <imgbtn name="btn_close" skin="_skin.sys.btn.close"    pos="-45,0" tip="close" animate="1"/>
    </caption>
    <window pos="5,[2,-5,-5" layout="vbox" gravity="center">
      <window size="-2,-1" layout="hbox">
        <text>server dir:</text>
        <text name="txt_svr_dir"/>
      </window>
      <window size="-2,-1" layout="hbox" extend_top="10">
        <button name="btn_install" padding="10,5,10,5" size="0,-1" weight="1" extend_left="30">install</button>
        <button name="btn_uninstall" padding="10,5,10,5" size="0,-1" weight="1" extend_left="30" extend_right="30">uninstall</button>
      </window>
    </window>
  </root>
</SOUI>
